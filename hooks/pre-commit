#!/bin/bash

SCRIPT="install.sh"
CHECKSUM="${SCRIPT}.sha256"

if git diff --cached --name-only | grep -q "^${SCRIPT}$"; then
    echo "ðŸ”’ Detected changes to ${SCRIPT}, generating checksum..."
    
    sha256sum "${SCRIPT}" > "${CHECKSUM}"
    
    git add "${CHECKSUM}"
    
    echo "âœ“ Checksum updated and staged"
fi